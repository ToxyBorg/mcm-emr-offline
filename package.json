{
  "name": "mcm-emr-offline",
  "version": "1.0.1-All-Doctors",
  "description": "MCM EMR Offline",
  "main": "./out/main/index.js",
  "author": "Amir",
  "homepage": "https://github.com/ToxyBorg",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:electron-build": "npm run build && npx ts-node electron-builder.config.ts"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@mantine/core": "^7.10.1",
    "@mantine/hooks": "^7.10.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.2.0",
    "jotai": "^2.8.3",
    "mysql2": "^3.10.0",
    "react-icons": "^5.2.1",
    "unzip-stream": "^0.3.4",
    "unzipper": "^0.11.6"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/unzip-stream": "^0.3.4",
    "@types/unzipper": "^0.10.9",
    "@vitejs/plugin-react": "^4.3.0",
    "electron": "^30.0.9",
    "electron-builder": "25.0.0-alpha.9",
    "electron-vite": "^2.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.2",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.15.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.12"
  }
}
